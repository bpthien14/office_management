{
    "name": "office-management/office-management-system",
    "description": "Hệ thống quản lý nhân sự theo mô hình MVC",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Office Management Team",
            "email": "admin@office-management.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "OfficeManagement\\": "core/"
        },
        "files": [
            "core/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 src/ core/",
        "cs-fix": "phpcbf --standard=PSR12 src/ core/",
        "stan": "phpstan analyse src/ core/ --level=5",
        "post-install-cmd": [
            "php -r \"if (!file_exists('config/config.local.php')) { copy('config/config.php', 'config/config.local.php'); }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
